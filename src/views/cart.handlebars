<h1>Carrito</h1>
{{#each cart.products}}
    <div>
        <h2>{{this.productId.title}}</h2>
        <p>{{this.productId.description}}</p>
        <p>Precio: {{this.productId.price}}</p>
        <p>Cantidad: {{this.quantity}}</p>

        <button onclick="deleteFromCart(event, '{{this.productId._id}}', '{{../cart._id}}')">Eliminar Producto</button>
    </div>
{{/each}}

{{#if cart.products}}
<form action="/api/carts/{{cart._id}}/purchase" method="POST">
    <button type="submit">Finalizar Compra</button>
</form>
{{else}}
    <p>Todavía no tienes ningún producto en el carrito.</p>
{{/if}}


