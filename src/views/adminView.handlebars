{{#if isAdmin}}
    <h1>Panel de Administración de Usuarios</h1>
    {{#each users}}
        <div class="user">
            <h2>{{this.first_name}} {{this.last_name}}</h2>
            <p>Email: {{this.email}}</p>
            <p>Rol: {{this.role}}</p>

            <form action="api/sessions/update-role/{{this._id}}" method="POST">
                <label for="role">Cambiar rol:</label>
                <select name="role" id="role">
                    <option value="usuario">Usuario</option>
                    <option value="premium">Premium</option>
                </select>
                <button type="submit">Actualizar Rol</button>
            </form>

            <form action="/delete-user/{{this._id}}" method="POST">
                <button type="submit">Eliminar Usuario</button>
            </form>
        </div>
    {{/each}}
{{else}}
    <h1>No tienes permiso para acceder a esta página.</h1>
{{/if}}