<h1>Productos</h1>
{{#each products}}
    <div>
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Precio: {{this.price}}</p>
        <a href="#" onclick="agregarAlCarrito(event, '{{this._id}}')">Agregar al
            carrito</a>
    </div>
{{/each}}
{{#if hasPrevPage}}
    <a href="{{prevLink}}">Página anterior</a>
{{/if}}
{{#if hasNextPage}}
    <a href="{{nextLink}}">Página siguiente</a>
{{/if}}
<p>Página {{page}} de {{totalPages}}</p>

<script
    src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.28/dist/sweetalert2.all.min.js
"
></script>
